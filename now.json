{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/next",
      "config": {
        "manifest": {
          "name": "NextJS Podcast player",
          "short_name": "Podcasts",
          "start_url": "/",
          "display": "standalone",
          "background_color": "#591F82",
          "theme_color": "#591F82",
          "icons": [
            {
              "src": "/android-icon-192x192.png",
              "sizes": "192x192",
              "type": "image/png"
            },
            {
              "src": "/android-icon-48x48.png",
              "sizes": "48x48",
              "type": "image/png"
            }
          ]
        }
      }
    }
  ]
}